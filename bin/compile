#!/usr/bin/env bash
# bin/compile <build-dir> <cache-dir>

BUILD_DIR=$1
BIN_DIR=$(cd $(dirname $0); pwd)
RDS_CERT_PATH="$BIN_DIR/certs/rds-global-bundle.pem"
LETSENCRYPT_CERT_PATH="$BIN_DIR/certs/isrgrootx1.pem"

mkdir -p $BUILD_DIR/certs

echo "copying ${RDS_CERT_PATH}"
cp ${RDS_CERT_PATH} $BUILD_DIR/certs/rds-global-bundle.pem

echo "copying ${LETSENCRYPT_CERT_PATH}"
cp ${LETSENCRYPT_CERT_PATH} $BUILD_DIR/certs/isrgrootx1.pem

exit $?